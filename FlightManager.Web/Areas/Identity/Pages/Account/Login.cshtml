@page
@model LoginModel

<div class="row">
    <div class="col-md-4 mx-auto my-auto">
        <section>
            <h1 class="text-center">Log in</h1>
            <form id="account" method="post">
                <h4 class="text-center">(Only for employees)</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input type="text" class="form-control" id="username" placeholder="Username" asp-for="Input.Username">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input type="password" class="form-control" id="username" placeholder="Password" asp-for="Input.Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <button type="submit" class="btn btn-primary bg-success bg-success text-center">Log in</button>
                </div>
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
