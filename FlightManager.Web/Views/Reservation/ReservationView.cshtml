@model FlightManager.Web.Models.Flights.FlightsPassengerViewModel

<h1 class="text-center">Flight passengers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Middle name
            </th>
            <th>
                Last name
            </th>
            <th>
                EGN
            </th>
            <th>
                Phone number
            </th>
            <th>
                Nationality
            </th>
            <th>
                Ticket type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in this.Model.Passengers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EGN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType)
                </td>
                <td class="d-flex justify-content-between">
                    <form asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id" method="post">

                        <input type="submit" value="Delete" class="btn btn-primary bg-success p-1" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li class="page-item  @(i == Model.Pager.CurrentPage ? "active" : "") ">
                <a asp-route-Pager.CurrentPage="@i" class="page-link @(i == Model.Pager.CurrentPage ? "bg-success" : "")">@i</a>
            </li>

        }
    </ul>
</table>
