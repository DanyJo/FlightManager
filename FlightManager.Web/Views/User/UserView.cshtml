@model FlightManager.Web.Models.Users.UsersDetailedViewModel

<h1 class="text-center">These are all the registered users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Email
            </th>
            <th>
                EGN
            </th>
            <th>
                Address
            </th>
            <th>
                Phone number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in this.Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EGN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td class="d-flex justify-content-between">
                    <a class="btn btn-primary bg-success p-1" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                    <form asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" method="post">

                        <input type="submit" value="Delete" class="btn btn-primary bg-success p-1" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li class="page-item  @(i == Model.Pager.CurrentPage ? "active" : "") ">
                <a asp-route-Pager.CurrentPage="@i" class="page-link @(i == Model.Pager.CurrentPage ? "bg-success" : "")">@i</a>
            </li>
        }
    </ul>
</table>
